<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">\
    
    <TextView
        android:text="Seu IMC é:"
        android:textColor="@color/purple_200"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/textview_result"
        tools:text="00.000"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="38sp"/>

    <TextView
        android:id="@+id/textview_classificacao"
        android:textAlignment="center"
        android:layout_margin="8dp"
        tools:text="Classificaçāo: Normal"
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:text="CONFIRA ABAIXO A TEBELA:"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"></TextView>
    <TextView
        android:text="IMC MENOR QUE 18,5      ABAIXO DO PESO (MAGREZA)"
        android:textStyle= "italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"></TextView>
    <TextView
        android:text="IMC ENTRE QUE 18,5 E 24,9     NORMAL"
        android:textStyle= "italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"></TextView>
    <TextView
        android:text="IMC ENTRE 25 E 29,9      SOBRE PESO"
        android:textStyle= "italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"></TextView>
    <TextView
        android:text="IMC ENTRE 30 E 39,9      OBESIDADE"
        android:textStyle= "italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"></TextView>
    <TextView
        android:text="IMC ACIMA DE 40      OBESIDADE GRAVE"
        android:textStyle= "italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"></TextView>



</LinearLayout>